@inherits LayoutComponentBase
@using teseractal_web.Components;

<MudThemeProvider Theme="teseractalTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Class="overflow-x-hidden">
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudText Class="ma-7 pa-2 quicksandBook" Color="Color.Inherit" Align="Align.Center" Typo="Typo.h5">teseractal</MudText>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" href="#"/>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Class="quicksandBold" Color="Color.Primary" Align="Align.Center" Typo="Typo.subtitle1">teseractal</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="overflow-x-hidden">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme teseractalTheme = new MyMudTheme();

}

